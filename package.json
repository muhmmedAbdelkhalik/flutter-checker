{
  "name": "flutter-checker",
  "displayName": "Flutter Checker",
  "description": "Check for outdated packages in Flutter/Dart pubspec.yaml files",
  "version": "1.0.10",
  "publisher": "abdelkhalik",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/muhmmedAbdelkhalik/flutter-checker"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:flutter-checker.checkOutdated",
    "onCommand:flutter-checker.clearHighlights",
    "onCommand:flutter-checker.openPubDev",
    "onLanguage:yaml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "flutter-checker.checkOutdated",
        "title": "Check for Outdated Packages",
        "category": "Flutter Checker",
        "icon": "$(sparkle)"
      },
      {
        "command": "flutter-checker.openPubDev",
        "title": "Open Package on pub.dev",
        "category": "Flutter Checker"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "flutter-checker.checkOutdated",
          "group": "navigation",
          "when": "resourceExtname == .yaml && editorLangId == yaml && resourceFilename == pubspec.yaml"
        }
      ]
    },
    "configuration": {
      "title": "Flutter Checker",
      "properties": {
        "flutterChecker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the outdated package highlighter"
        },
        "flutterChecker.highlightColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Main highlight color for outdated packages (used for overview ruler)"
        },
        "flutterChecker.backgroundColor": {
          "type": "string",
          "default": "#ff6b6b20",
          "description": "Background color for highlighting outdated packages (with transparency)"
        },
        "flutterChecker.borderColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Border color for highlighting outdated packages"
        },
        "flutterChecker.textColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Text color for the '(outdated)' label"
        },
        "flutterChecker.versionTextColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Text color for the version comparison (â†’ latest)"
        },
        "flutterChecker.patchUpdateColor": {
          "type": "string",
          "default": "#4ecdc4",
          "description": "Color for patch updates (bug fixes). Uses theme-aware colors: light theme uses default, dark theme uses darker variant. Leave empty to use automatic theme colors."
        },
        "flutterChecker.minorUpdateColor": {
          "type": "string",
          "default": "#ffa726",
          "description": "Color for minor updates (new features). Uses theme-aware colors: light theme uses default, dark theme uses darker variant. Leave empty to use automatic theme colors."
        },
        "flutterChecker.majorUpdateColor": {
          "type": "string",
          "default": "#ff6b6b",
          "description": "Color for major updates (breaking changes). Uses theme-aware colors: light theme uses default, dark theme uses darker variant. Leave empty to use automatic theme colors."
        }
      }
    },
    "languages": [
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yaml"
        ],
        "extensions": [
          ".yml",
          ".yaml"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile && npm run package",
    "package": "vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "16.x",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^4.9.4"
  }
}